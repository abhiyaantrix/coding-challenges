# frozen_string_literal: true

source 'https://rubygems.org'

git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

# Code style checking and code formatting tool
gem 'rubocop', '~> 1'
# Check for performance optimizations
gem 'rubocop-performance'
# RuboCop extension focused on enforcing RSpec best practices and coding conventions
gem 'rubocop-rspec', '~> 2'

# Testing
gem 'rspec', '~> 3'
# Library for generating fake data
gem 'faker', '~> 3'

# Code coverage
gem 'simplecov', '~> 0.21'
gem 'simplecov-cobertura'
gem 'simplecov-console'

# Guard plugins
# Guard::RSpec automatically run your specs
gem 'guard-rspec', '~> 4.7'
# Automatically check Ruby code style with RuboCop when files are modified
gem 'guard-rubocop', '~> 1.4'

# TestProf is a collection of different tools to analyze your test suite performance
gem 'test-prof'
# ruby-prof is a profiler for MRI Ruby
gem 'ruby-prof'
